@{
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}
<div class="main-content-container overflow-hidden">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-4 mt-1">
        <h5 class="mb-0">ShipUse</h5>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb align-items-center mb-0 lh-1">
                <li class="breadcrumb-item">
                    <a href="~/Admin/Dashboard" class="d-flex align-items-center text-decoration-none">
                        <i class="ri-home-8-line fs-15 text-primary me-1"></i>
                        <span class="text-body fs-14 hover">Dashboard</span>
                    </a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                    <span>ShipUse Status</span>
                </li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-xxl-12 col-lg-12 col-md-12 col-12">
            <div class="table-card">
                <div class="d-flex justify-content-between align-items-center flex-wrap gap-3 p-3">
                    <form class="table-src-form position-relative m-0">
                        <input type="text" class="form-control" id="txtSearch" placeholder="Search here...">
                        <div class="src-btn">
                            <span class="ti ti-search">search</span>
                        </div>
                    </form>
                    <button type="button" class="btn btn-md btn-primary" data-bs-toggle="modal" data-bs-target="#ShipTypeModal"><i class="ti ti-plus"></i> Add Use Type </button>
                </div>
                <div class="table-responsive">
                    <table id="typeStatusTable" class="table align-middle w-100">
                        <thead>
                            <tr>
                                <th scope="col" class="fw-medium">Sno</th>
                                <th scope="col" class="fw-medium">Use Type</th>
                                <th scope="col" class="fw-medium"><abbr data-title="Date of Entry">DOE</abbr></th>
                                <th scope="col" class="fw-medium">Created by</th>
                                <th scope="col" class="fw-medium">Status</th>
                                <th scope="col" class="fw-medium">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                    <div class="d-flex justify-content-center justify-content-sm-between align-items-center text-center flex-wrap gap-2 showing-wrap px-3 pb-3">
                        <span class="fs-15" id="lblpagedescription">Showing 1 to 10 of 50 entries</span>

                        <nav class="custom-pagination" aria-label="Page navigation">
                            <ul class="pagination mb-0 justify-content-center" id="pagination">
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="ShipTypeModal" tabindex="-1" aria-labelledby="shipmodal3" aria-hidden="true">
    <div class="modal-dialog modal-dialog-slideout" role="document">
        <div class="modal-content bg-white">
            <div class="modal-header">
                <h5 class="modal-title mb-0" id="shipmodal">Add UseType </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <i class="ti ti-x"></i>
                </button>
            </div>
            <div class="modal-body p-3">
                <input type="hidden" id="hdnTypeStatus" />
                <div class="row">
                    <div class="col-lg-12">
                        <div class="mb-3">
                            <label class="label">UseType Name</label>
                            <input type="text" class="form-control" id="txtUseType" placeholder="Type Name">
                        </div>
                        <div class="mb-3">
                            <label class="label">Status</label>
                            <select class="form-select form-control" id="ddlUseType" aria-label="Floating label select example">
                                <option value="-1" selected>Select Staus</option>
                                <option value="1">Active</option>
                                <option value="0">In-Active</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer p-3">
                <button type="button" class="btn btn-md btn-danger fw-normal text-white" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-md btn-primary fw-normal text-white" id="btnUseAdd">Submit</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>


         let terminalData = [];
        let pageSize = 10;         // records per page
        let currentPage = 1;
        let filteredData = [];
        $(document).ready(function () {
            LoadshiptypeStatusList();
        });

        function LoadshiptypeStatusList() {
            $.ajax({
                url: "/Master/GetShipUseList",
                type: "GET",
                success: function (res) {
                    if (res.status === 1) {
                        terminalData = res.data || [];
                        filteredData = terminalData;
                        currentPage = 1;
                        RenderTable();
                        renderPageInfo();
                    }
                }
            });
        }
        function RenderTable() {

            let tbody = "";
            let start = (currentPage - 1) * pageSize;
            let end = start + pageSize;
            let pageData = filteredData.slice(start, end);
            $.each(pageData, function (i, row) {
                tbody += `
                                                                <tr>
                                                                    <td>${start + i + 1}</td>
                                                                    <td>${row.useType}</td>
                                                                    <td>${row.createdOn}</td>
                                                                    <td>${row.createdBy}</td>
                                                                    <td>
                                                                    ${row.isActive
                        ? '<span class="text-success bg-success bg-opacity-10 default-badge">Active</span>'
                        : '<span class="text-danger bg-danger bg-opacity-10 default-badge">Inactive</span>'
                    }
                                                                    </td >
                                                                    <td>
                                                                        <div class="d-flex justify-content-start gap-3">
                                                                            <button class="bg-transparent p-0 border-0 hover-text-success btnEditType" data-id="${row.id}" data-title="Edit">
                                                                                <i class="ti ti-pencil fs-16"></i>
                                                                            </button>
                                                                    <button class="bg-transparent p-0 border-0 hover-text-danger btnshipDelete" data-id="${row.id}" data-title="Delete">
                                                                        <i class="ti ti-trash fs-16">delete</i>
                                                                    </button>
                                                                            </div>
                                                                    </td>
                                                                </tr >
                                                    `;

            });
            $("#typeStatusTable tbody").html(tbody);
            RenderPagination();
        }
        function RenderPagination() {
            let totalPages = Math.ceil(filteredData.length / pageSize);
            let pageHtml = "";
            for (let i = 1; i <= totalPages; i++) {
                pageHtml += `
                                    <li class="page-item">
                                        <button class="page-link ${i === currentPage ? 'active' : ''} page-btn" data-page="${i}">
                                            ${i}
                                        </button>
                                    </li>
                                `;
            }
            $("#pagination").html(pageHtml);
        }
        $(document).on("click", ".page-btn", function () {
            currentPage = parseInt($(this).data("page"));
            RenderTable();
            renderPageInfo();
        });
        function renderPageInfo() {
            let page = parseInt(currentPage);
            let size = parseInt(pageSize);
            let total = filteredData.length;
            let start = (page - 1) * size + 1;
            let end = page * size;
            if (end > total) { end = total };
            if (total === 0) {
                $("#lblpagedescription").html(`
                                            <span class="text-danger">
                                                <i class="ti ti-info-circle"></i>
                                                No data found
                                            </span>
                                        `);
                return;
            }
            let desc = `Showing ${start} to ${end} of ${total} entries`;
            $("#lblpagedescription").text(desc);
        }

        function resetshiptypeStatusForm() {
            //Close Modal

            var modalEL = $("#ShipTypeModal");
            var modal = bootstrap.Modal.getInstance(modalEL);
            if (modal) modal.hide();

            debugger;
            //Clear Controls
            $("#txtUseType").val("");
            $("#ddlUseType").val("-1");

            // Clear validation errors
            $("#txtUseType, #ddlUseType").removeClass("input-error");
            $(".error-text").remove();

            //Refresh the button and modal
            $("#btnUpdatetype").text("Submit").attr("id", "btnUseAdd");
            $("#shipmodal").text("Add UseType Status");
        } 












          function validateContols() {
            if (!validateRequired("txtUseType", ["", " "], "UseType Name is required !")) return false;
            if (!validateRequired("ddlUseType", ["-1", ""], "Please select status !")) return false;
            return true;
        }
        $(document).on("click", "#btnUseAdd", function () {
            if (!validateContols()) {
                return;
            }
            let StatusName = $("#txtUseType").val().trim();
            let Status = $("#ddlUseType").val();
            let payLoad = {
                UseType: StatusName,
                isActive: Status === "1" ? true : false,
                createdBy: 0
            }
            $.ajax({
                url: "/Master/AddShipUseStatus",
                type: "POST",
                contentType: "application/json",
                data: JSON.stringify(payLoad),
                success: function (res) {
                    let type = res.status === 1 ? "success" : res.status === 2 ? "warning" : "error";
                    let title = res.status === 1 ? "Success" : res.status === 2 ? "Already Exists" : "Error";
                    if (res.status === 1) {
                        resetshiptypeStatusForm();
                        LoadshiptypeStatusList();
                    }
                    ShowToast(type, title, res.message);
                }
            });
        });
        $(document).on("input change", "#txtUseType,#ddlUseType", function () {
            $(this).removeClass("input-error");
            $(this).next(".error-text").remove();
        });
        $(document).on("click", '[data-bs-target="#ShipTypeModal"]', function () {
            resetshiptypeStatusForm();
        });


          $(document).on("click", ".btnEditType", function () {
             //resetshiptypeStatusForm();
            let id = $(this).data("id");
            $.ajax({
                url: "/Master/GetShipUseById",
                data: {ID:id},
                success:function(res){
                    if(res.status===1){
                        debugger;
                        $("#shipmodal").text("Edit ShipUse");
                        $("#hdnTypeStatus").val(res.data.id);
                        $("#txtUseType").val(res.data.useType)
                        $("#ddlUseType").val(res.data.isActive ? "1" : "0");
                        $("#btnUseAdd").text("Update").attr("id", "btnUpdatetype");
                        var modal = new bootstrap.Modal($("#ShipTypeModal"));
                        modal.show();
                    }
                    else {
                        ShowToast("info", "Not Found", res.message);
                    }
                }
            })
        });


          $(document).on("click", "#btnUpdatetype", function () {
            if (!validateContols()) {
                return;
            }
            let payLoad = {
                id: $("#hdnTypeStatus").val(),
                useType: $("#txtUseType").val().trim(),
                isActive: $("#ddlUseType").val() === "1"
            };
            $.ajax({
                url: "/Master/UpdateShipUseStatus",
                type: "POST",
                contentType: "application/json",
                data: JSON.stringify(payLoad),
                success: function (res) { 
                    let type = res.status === 1 ? "success" : res.status === 2 ? "warning" : res.status === -1 ? "info" : "error";
                    let title = res.status === 1 ? "Success" : res.status === 2 ? "Already Exists" : res.status === -1 ? "Not Found" : "Error";
                    if (res.status === 1) { 
                        resetshiptypeStatusForm(); 
                        LoadshiptypeStatusList(); 
                    } 
                    ShowToast(type, title, res.message); 
                }
            });
        });




        $(document).on("click", ".btnshipDelete", function () {
            let id = $(this).data("id");

            ShowConfirmToast(
                "Do you want to delete this record ?",
                () => { deleteuseStatus(id); }
            );
        });
        function deleteuseStatus(id) {
            $.ajax({
                url: "/Master/DeleteShipUseStatus",
                type: "POST",
                contentType: "application/json",
                data: JSON.stringify({ id: id }),
                success: function (res) {

                    let type = res.status === 1 ? "success" : res.status === -1 ? "warning" : "error";
                    let title = res.status === 1 ? "Deleted!" : res.status === -1 ? "Not Found!" : "Failed!";

                    ShowToast(type, title, res.message);

                    if (res.status === 1) {
                        LoadshiptypeStatusList();
                    }
                }
            });
        };


           $(document).on("keyup", "#txtSearch", function () {
            let value = $(this).val().toLowerCase().trim();
            filteredData = terminalData.filter(row =>
                Object.values(row).some(val =>
                    String(val).toLowerCase().includes(value)
                )
            );
            currentPage = 1;
            RenderTable();
            renderPageInfo();
        });

    </script>
}